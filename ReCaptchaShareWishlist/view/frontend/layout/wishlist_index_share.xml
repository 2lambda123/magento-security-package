<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="wishlist.sharing">
            <referenceBlock name="captcha">
                <block class="Magento\ReCaptchaUi\Block\ReCaptcha"
                       name="recaptcha"
                       after="-"
                       template="Magento_ReCaptchaFrontendUi::recaptcha.phtml"
                       ifconfig="recaptcha_frontend/type_for/share_wishlist">
                    <arguments>
                        <argument name="recaptcha_for" xsi:type="string">share_wishlist</argument>
                        <argument name="jsLayout" xsi:type="array">
                            <item name="components" xsi:type="array">
                                <item name="recaptcha" xsi:type="array">
                                    <item name="component" xsi:type="string">Magento_ReCaptchaFrontendUi/js/reCaptcha
                                    </item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                </block>
            </referenceBlock>
            <block class="Magento\ReCaptchaUi\Block\ReCaptcha"
                   name="captcha"
                   after="-"
                   template="Magento_ReCaptchaFrontendUi::recaptcha.phtml"
                   ifconfig="recaptcha_frontend/type_for/share_wishlist">
                <arguments>
                    <argument name="recaptcha_for" xsi:type="string">share_wishlist</argument>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="recaptcha" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_ReCaptchaFrontendUi/js/reCaptcha</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
